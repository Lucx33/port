---
const { name, tags, description, imageFile, gitLink, realLink} = Astro.props;
---
<li class="´project-item">
    <div class="content">
        <!--<img src={imageFile} alt="{name} project image" class="background-image">-->
        <div class="header">
            <h2>{name}</h2>
            <a href={gitLink} class="git-icon" target="_blank" rel="noopener noreferrer">
                <i class="fab fa-github"></i>
            </a>
        </div>
        <p class="tag">{tags.join(" • ")}</p>
        <p class="description">{description}</p>
        <!--<a href={realLink} target="_blank">Live</a>-->
    </div>
    <!--<a href={realLink} target="_blank">Live</a>--->
</li>
<style>
    .content {
        position: relative;
        z-index: 1;
        transition: transform 0.4s ease;
    }
    .background-image {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        filter: blur(3px);
        opacity: 0.5; /* Adjust the opacity as needed */
    }
    .project-item {
        margin-bottom: 1rem;
        padding: 1rem;
        border: 1px solid #ccc;
        color: white;
        display: flex;
        flex-direction: column;
    }
    h2 {
        color: white;
        font-weight: bold;
    }
    .git-icon {
        color: white;
        display: flex;
    }
    .tag-list {
        display: flex;
    }
    .tag {
        font-weight: bold;
        display: flex;
        color: #00c3ff;
        padding-left: 5%;
        padding-right: 5%;
        padding-top: 3%;
    }
    .description {
        color: white;
        padding-top: 3%;
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s ease, transform 0.5s ease;
    }
    .header {
        display: flex;
        justify-content: space-between;
    }
    .content:hover {
        transform: scale(1.2);

    }
    .content:hover .description {
        opacity: 1;
        transform: translateY(0);
    }
</style>